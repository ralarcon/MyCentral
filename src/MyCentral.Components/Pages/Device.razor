@page "/device/{DeviceId}"

@inject IServiceClient Client

<div>
    <header class="pb-3 mb-4 border-bottom">
        <span class="fs-4">@DeviceId</span>
    </header>

    <div class="card-group">
        <UpdateComponentProperty DeviceId="@DeviceId" />

        <div class="card">

            <div class="card-header">
                Invoke Method
            </div>
            <div class="card-body">
                <InvokeCommand DeviceId="@DeviceId" />
            </div>
        </div>
    </div>

    <p />

    <div class="card">
        <div class="card-header">
            Events
        </div>

        <div class="card-body">
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
            </div>
        </div>

        <EventList DeviceId="@DeviceId" />
    </div>
</div>


@code {
    [Parameter]
    public string DeviceId { get; set; } = null!;
}
