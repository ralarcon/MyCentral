@using CustomService.Client

<div class="form-group">
    <label>
        User:
        <input @bind="userInput" />
    </label>
</div>
<div class="form-group">
    <label>
        Message:
        <input @bind="messageInput" size="50" />
    </label>
</div>
<button @onclick="Send">Send</button>

<hr>

<ItemList Observable="@Client.EventClient" />

@code {
    private string userInput;
    private string messageInput;

    [CascadingParameter]
    protected ServiceClient Client { get; set; }

    private Task Send() => Client.EventClient.Send(userInput, messageInput);
}